                {
                    <div class="col-md-3">
                        <div class="card card-category">
                            <div class="img-wrap">
                                 <img src="~/images/brand/@item.ImageUrl" alt="@item.BrandName" />
                            </div>
                            <div class="card-body">
                                <h4 class="card-title">
                                    @Html.ActionLink(item.BrandName, "ProductByBrand", new { BrandId = item.BrandId }, new { @class = "btn btn-link" })
