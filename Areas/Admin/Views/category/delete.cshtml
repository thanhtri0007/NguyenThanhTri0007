@model NguyeThanhTri.Context.Category
@{
    ViewBag.Title = "Delete Category";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Delete Category</h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Category", new { area = "Admin" })">Home</a></li>
            <li class="active">Delete Category</li>
        </ol>
    </section>

    <section class="content">
        <div class="container-fluid">
            <h2>Delete</h2>

            <div class="alert alert-warning">
                <strong>Warning!</strong> Are you sure you want to delete this category?
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                <p class="form-control-static">@Model.Name</p>
            </div>

            @using (Html.BeginForm("Delete", "Category", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.CategoryId)
                    <button type="submit" class="btn btn-danger">Delete</button>
                @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
            }
        </div>
    </section>
</div>
