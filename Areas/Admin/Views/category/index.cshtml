@model IEnumerable<NguyeThanhTri.Context.Category>
@{
    ViewBag.Title = "Category List";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Category List</h1>
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">Categories</li>
        </ol>
    </section>

    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Categories</h3>
                <button type="button" class="btn btn-primary float-right" onclick="location.href='@Url.Action("Create", "Category", new { area = "Admin" })'">
                    <i class="fas fa-plus"></i> Create
                </button>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">#</th>
                            <th style="width: 20%">Category Name</th>
                            <th style="width: 30%">Image</th>
                            <th style="width: 20%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.CategoryId</td>
                                <td><a>@category.Name</a></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(category.ImageUrl))
                                    {
                                        <img src="~/images/cate/@category.ImageUrl" alt="@category.Name" style="max-width: 100px;" />
                                    }
                                    else
                                    {
                                        <span>No Image</span>
                                    }
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="@Url.Action("Edit", "Category", new { id = category.CategoryId })">
                                        <i class="fas fa-pencil-alt"></i> Edit
                                    </a>
                                    <a class="btn btn-info btn-sm" href="@Url.Action("Detail", "Category", new { id = category.CategoryId })">
                                        <i class="fas fa-eye"></i> Detail
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Category", new { id = category.CategoryId })">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>
