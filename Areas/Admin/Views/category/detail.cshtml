@model NguyeThanhTri.Context.Category
@{
    ViewBag.Title = "Category Details";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Category Details</h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Category", new { area = "Admin" })">Home</a></li>
            <li class="active">Details</li>
        </ol>
    </section>

    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Category Information</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label>Category Name:</label>
                    <p>@Model.Name</p>
                </div>
                <div class="form-group">
                    <label>Image:</label>
                    <div>
                        <img src="~/images/cate/@Model.ImageUrl" alt="@Model.Name" style="max-width: 200px; max-height: 200px;" />
                    </div>
                </div>
                <div class="form-group">
                    <a href="@Url.Action("Edit", "Category", new { id = Model.CategoryId })" class="btn btn-info">Edit</a>
                    <a href="@Url.Action("Index", "Category", new { area = "Admin" })" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </section>
</div>
