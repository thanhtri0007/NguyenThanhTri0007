@model NguyeThanhTri.Context.Brand
@{
    ViewBag.Title = "detail";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <h2> Detail</h2>

            <div class="form-group">
                @Html.LabelFor(m => m.BrandName)
                <p class="form-control-static">@Model.BrandName</p>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ImageUrl)
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                        <img src="@Url.Content("~/images/brand/" + Model.ImageUrl)" alt="Brand Image" style="width: 200px; height: auto;" />
                }
                else
                {
                        <p>No Image</p>
                }
            </div>

            <a href="@Url.Action("Edit", new { id = Model.BrandId })" class="btn btn-warning">Edit</a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
        </div>
    </section>
    <!-- /.content -->


</div>
<!-- ./wrapper -->
