@model NguyeThanhTri.Context.Brand

@{
    ViewBag.Title = "create";
}
<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <h2>Create </h2>

            @using (Html.BeginForm("Create", "Brands", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                    <div class="form-group">
                    @Html.LabelFor(m => m.BrandName, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.BrandName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.BrandName)
                    </div>

                    <div class="form-group">
                    @Html.LabelFor(m => m.ImageUrl, new { @class = "control-label" })
                        <input type="file" name="imageFile" class="form-control" />
                    @Html.ValidationMessageFor(m => m.ImageUrl)
                    </div>


                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create</button>
                    @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
                    </div>
            }
        </div>
    </section>

</div>


