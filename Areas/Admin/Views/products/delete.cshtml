@model NguyeThanhTri.Context.Product
@{
    ViewBag.Title = "delete";
}
<div class="content-wrapper">
    <section class="content-header">
        <h1>Product List</h1>
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">Categories</li>
        </ol>
    </section>
    <section class="content">
        <div class="container-fluid">
            <h2>Delete Product</h2>

            <div class="form-group">
                <label>ID</label>
                <p>@Model.Id</p>
            </div>

            <div class="form-group">
                <label>Name</label>
                <p>@Model.Name</p>
            </div>

            <div class="form-group">
                <label>Price</label>
                <p>@Model.Price.ToString("C")</p>
            </div>

            <div class="form-group">
                <label>Description</label>
                <p>@Model.Description</p>
            </div>

            <div class="form-group">
                <label>Category</label>
                <p>@(Model.Category != null ? Model.Category.Name : "No Category")</p>
            </div>

            <div class="form-group">
                <label>Brand</label>
                <p>@(Model.Brand != null ? Model.Brand.BrandName : "No Brand")</p>
            </div>

            <div class="form-group">
                <label>Product Image</label>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                        <img src="@Url.Content("~/images/pro/" + Model.ImageUrl)" alt="Product Image" width="150" height="150" class="img-thumbnail" />
                }
                else
                {
                        <p>No Image</p>
                }
            </div>

            <p>Are you sure you want to delete this product?</p>

            @using (Html.BeginForm("Delete", "Products", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
            }
        </div>
    </section>
    </div>