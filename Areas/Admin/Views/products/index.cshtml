@model IEnumerable<NguyeThanhTri.Context.Product>


@{
    ViewBag.Title = "Index";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>Product List</h1>
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">Categories</li>
        </ol>
    </section>

    <section class="content">
        <div class="container-fluid">
            <h2>Product</h2>

            <div class="card-header">
                <h3 class="card-title">Product</h3>
                <button type="button" class="btn btn-primary float-right" onclick="location.href='@Url.Action("Create", "Products", new { area = "Admin" })'">
                    <i class="fas fa-plus"></i> Create
                </button>
            </div>

            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Image</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Brand</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var product in Model)
                        {
                                    <tr>
                                        <td>@product.Id</td>
                                        <td>@product.Name</td>
                                        <td>@product.Price.ToString("C")</td>
                                        <td>
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                                    <img src="@Url.Content("~/images/pro/" + product.ImageUrl)" alt="@product.Name" style="width: 100px; height: auto;" />
                                    }
                                    else
                                    {
                                                    <img src="@Url.Content("~/images/pro/default.png")" alt="No Image" style="width: 100px; height: auto;" />
                                    }
                                        </td>
                                        <td>@product.Description</td>
                                        <td>@(product.Category != null ? product.Category.Name : "No Category")</td>
                                        <td>@(product.Brand != null ? product.Brand.BrandName : "No Brand")</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                        @Html.ActionLink("Edit", "Edit", new { id = product.Id }, new { @class = "btn btn-sm btn-warning", @style = "margin-right: 2px;" })
                                        @Html.ActionLink("Detail", "Detail", new { id = product.Id }, new { @class = "btn btn-sm btn-info", @style = "margin-right: 2px;" })
                                        @Html.ActionLink("Delete", "Delete", new { id = product.Id }, new { @class = "btn btn-sm btn-danger" })
                                            </div>
                                        </td>
                                    </tr>
                        }
                    }
                    else
                    {
                            <tr>
                                <td colspan="8">No products found.</td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
    </div>