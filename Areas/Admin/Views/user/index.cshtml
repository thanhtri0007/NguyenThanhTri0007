

@model IEnumerable<NguyeThanhTri.Context.User>

@{
    ViewBag.Title = "index";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>User List</h1>
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">User</li>
        </ol>
    </section>

    <section class="content">
        <div class="container-fluid">
            <h2>User</h2>

            <div class="card-header">
                <h3 class="card-title">User</h3>
                <button type="button" class="btn btn-primary float-right" onclick="location.href='@Url.Action("Create", "User", new { area = "Admin" })'">
                    <i class="fas fa-plus"></i> Create
                </button>
            </div>

            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Image</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Email</td>
                                <td>
                                @if (!string.IsNullOrEmpty(user.ImageUrl))
                                {
                                            <img src="@Url.Content("~/images/user/" + user.ImageUrl)" alt="@user.FirstName" style="width: 100px; height: auto;" />
                                }
                                else
                                {
                                            <img src="@Url.Content("~/images/user/default.png")" alt="No Image" style="width: 100px; height: auto;" />
                                }
                                </td>
                                <td>@(user.IsAdmin ? "Admin" : "User")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                    @Html.ActionLink("Edit", "Edit", new { id = user.Id }, new { @class = "btn btn-sm btn-warning", @style = "margin-right: 2px;" })
                                    @Html.ActionLink("Delete", "Delete", new { id = user.Id }, new { @class = "btn btn-sm btn-danger" })
                                    </div>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
    </div>